{
    "schemaVersion": 1,
    "id": "miniblockmerchants",
    "version": "${version}",
    "name": "Miniblock Merchants",
    "description": "Adds more than two dozen new villagers which trade a huge variety of miniblocks for all your decorating needs.",
    "authors": [
        "chimericdream"
    ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/miniblock-merchants",
        "sources": "https://github.com/chimericdream/miniblock-merchants/"
    },
    "license": "MIT",
    "icon": "assets/miniblockmerchants/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.chimericdream.miniblockmerchants.fabric.MiniblockMerchantsFabric"
        ],
        "client": [
            "com.chimericdream.miniblockmerchants.fabric.client.MiniblockMerchantsClient"
        ],
        "modmenu": [
            "com.chimericdream.miniblockmerchants.fabric.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "miniblockmerchants.mixins.json"
    ],
    "accessWidener": "miniblockmerchants.accesswidener",
    "depends": {
        "fabricloader": ">=0.15",
        "minecraft": "~1.21",
        "java": ">=21",
        "architectury": ">=13.0.2",
        "fabric-api": "*",
        "chimericlib": ">=2.2.0-beta.0",
        "yet_another_config_lib_v3": ">=3.6.1"
    },
    "recommends": {
        "modmenu": ">=11.0.0"
    }
